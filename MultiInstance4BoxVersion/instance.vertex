#version 330 core

layout(location = 0) in vec3 apos;
layout(location = 1) in vec3 anormal;
layout(location = 2) in vec2 atex;
layout(location = 3) in mat4 aInsMatrix;
layout(location = 7) in vec3 acolor;
uniform mat4 view;
uniform mat4 projection;
out vec2 texcoord;
out vec3 normalDir;
out vec3 fragPos;
out vec3 color;
void main()
{
	texcoord = atex;
	fragPos = vec3((aInsMatrix*vec4(apos,1.0)));
	mat3 normalMatrix = mat3(transpose(inverse(aInsMatrix)));
	normalDir = normalize(normalMatrix * anormal); 
	color = acolor;
	gl_Position = projection* view* aInsMatrix* vec4(apos, 1.0);
}
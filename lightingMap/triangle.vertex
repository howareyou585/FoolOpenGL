#version 330

layout(location = 0) in vec3 aposition;
layout(location = 1) in vec3 anormal;
layout(location = 2) in vec2 atextcoord;
uniform mat4 model;
uniform mat4 view;
uniform mat4 projection;
out vec2 texcoord;
void main()
{
	texcoord = atextcoord;
	gl_Position = projection*view*model*vec4(aposition, 1.0);
}
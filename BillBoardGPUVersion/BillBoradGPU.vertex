#version 330
layout(location = 0) in vec3 aposition;
uniform vec3 rightDir; //相机的右方向
uniform vec3 upDir;     //(0,1,0) 或者是相机的上方向

uniform mat4 mvp;
out vec2 texcoord;
void main()
{
	const vec2 uv[6] = vec2[6](
	vec2(0.f,0.f),
	vec2(0.f,1.f),
	vec2(1.f,1.f),
	vec2(0.f,0.f),
	vec2(1.f,1.f),
	vec2(1.f,0.f)
	);
	texcoord = uv[gl_VertexID];
	float x = texcoord.x;
	float y = texcoord.y;
	vec3 pnt = aposition + ((x-0.5)*5.0)*rightDir +(y*5)*upDir;
	gl_Position = mvp*vec4(pnt, 1.0);
}
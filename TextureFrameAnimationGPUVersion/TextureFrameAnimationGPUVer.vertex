#version 430 core
layout(location = 0) in vec3 aPosition;
layout(location = 1) in vec2 aTexCoord;
uniform mat4 model;
uniform mat4 view;
uniform mat4 projection;
uniform vec4 framInfo; // x:curRow, y:curCol,z:frame, scale
out vec2 texCoord;
void main()
{
	texCoord = aTexCoord;
	float scale = framInfo.w;
	texCoord.x *= scale;
	texCoord.y *= scale;

	texCoord.x += scale * framInfo.y;
	texCoord.y += scale * framInfo.x;
	gl_Position =projection*view*model* vec4(aPosition, 1.0);
}